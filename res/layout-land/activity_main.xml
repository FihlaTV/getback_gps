
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_getLocationProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="renewProvider"
        android:text="@string/button_getLocationProvider" />

    <TextView
        android:id="@+id/textView_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_LocationProvider"
        android:padding="2dp"
        android:text="@string/location" />

    <TextView
        android:id="@+id/textView_LocationProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_getLocationProvider"
        android:padding="2dp"
        android:text="@string/location_provider" />

    <Button
        android:id="@+id/button_getLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button_getLocationProvider"
        android:text="@string/button_getLocation"
        android:onClick="renewLocation" />

    <TextView
        android:id="@+id/textView_ToDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_StoredLocation"
        android:layout_below="@+id/textView_StoredLocation"
        android:padding="2dp"
        android:text="@string/to_dest" />

    <TextView
        android:id="@+id/textView_StoredLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_Location"
        android:layout_alignBottom="@+id/textView_Location"
        android:layout_toRightOf="@+id/textView_Location"
        android:padding="2dp"
        android:text="@string/stored_location" />

</RelativeLayout>